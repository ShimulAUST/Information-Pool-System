
@{
    ViewBag.Title = "AllBlogs";
}

<body style="background:url(../images/n26.jpg);background-size:cover">
    <div style="background-color:white;padding:2%;margin-top:2%">
        <div>
            <IMG SRC="../images/bloggif.gif" style="width:100%;height:350px">
        </div>
        <hr />

        @if (Model.Rows.Count == 0)
        {
            <h3>No Blogs exist in our site at the moment.</h3>
        }
        else
        {
            for (int i = 0; i < Model.Rows.Count; i++)
            {
                <div style="margin-left:10%">
                    <h3><a href="@Url.Action("BlogView", "Blogger",new { blogid=@Model.Rows[i][0]})" target="_blank">@Model.Rows[i][1]</a></h3>
                    <h5>Type: @Model.Rows[i][4]</h5>
                </div>
                <hr />
            }
            
        }
    </div>
</body>


