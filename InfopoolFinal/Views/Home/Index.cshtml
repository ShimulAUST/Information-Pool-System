@{
    ViewBag.Title = "Home Page";
}


<link href="~/style/indexHome.css" rel="stylesheet" />
<body style="background:url(../images/n26.jpg);">
    
    @Html.Raw(TempData["msg"]);
    @{
        
        TempData["msg"] = null;
    }

    <div class="container" style="background-color:white;width:100%;height:100%;margin-top:5%">
        <div class="box" style="background-color:#1ab5df;height:400px;margin-top:2%">
            <IMG SRC="../images/newsprint.gif" style="margin-left:100px">
            <IMG SRC="../images/newsprint.gif" style="float:right;margin-right:100px">
        </div>


        <hr />




        @for (int i = 0; i < 3; i++)
        {

            <div style="margin-left:10%">
                <h3>Headline: <a href=@Model.Rows[i][2] target="_blank">@Model.Rows[i][1]</a> </h3>
                <h5>Source: @Model.Rows[i][3]</h5>
                <h5>Type: @Model.Rows[i][4]</h5>
                <h5>Post Time: @Model.Rows[i][5]</h5>

            </div>
            <hr />



        }
        <button class="btn btn-primary btn-block" id="btnhide" type="button" data-toggle="collapse" data-target="#down" aria-expanded="false" aria-controls="down" onClick="this.style.visibility= 'hidden';" style="margin-bottom:1%">See More     <i class="fa fa-angle-double-down"></i></button>
        <div class="collapse multi-collapse" id="down">
            <div class="card card-body">
                @for (int i = 3; i < Model.Rows.Count; i++)
                {

                    <div style="margin-left:10%">
                        <h3>Headlines: <a href=@Model.Rows[i][2] target="_blank">@Model.Rows[i][1]</a> </h3>
                        <h5>Source: @Model.Rows[i][3]</h5>
                        <h5>Type: @Model.Rows[i][4]</h5>
                        <h5>Post Time: @Model.Rows[i][5]</h5>

                    </div>
                    <hr />



                }

            </div>
        </div>



    </div>


</body>

