@model InfopoolFinal.Models.ContactViewModel
@{
    ViewBag.Title = "Contact";
}

@using (Html.BeginForm("Contact", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{


    <body style="background:url(../images/watch.jpg);background-size:cover">
        

        <div class="w3ls-grids">

            <div class="w3ls-right"  style="float: right;width: 45%;background:rgba(194, 191, 183, 0.95);text-align: center; border-radius:10px">
                <div class="w3l-dot">
                    <div class="w3-heading">
                        <h3 style="font-size: 2.5em;font-weight:bold; color:black;text-shadow: 2px 3px rgba(121, 119, 113, 0.60);letter-spacing: 12px;line-height: 1.5em;">
                            Post Complaint
                        </h3>
                        <h4 style="color: #000;">we will try to resolve any issues you have</h4>
                    </div>
                </div>

            </div>


            <div style="height:400px;width:50%;background: rgba(194, 191, 183, 0.80);margin-top:50px;border-radius:15px">
                <div class="w3-title">
                    <h1 style="text-align:center">Contact Us</h1>
                    <h3 style="text-align:center;color:#000;font-weight:bold;">Fill up the form</h3>

                </div>


                <div class="" align="center">
                    <div class="form-group">
                        
                        <label>Email:</label>

                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control",@type="email",required = "required" })

                    </div>
                    <div class="form-group">
                        
                        <label>Problem Subject:</label>

                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control",required = "required" })

                    </div>
                    <div class="form-group">

                        <label>Problem Details:</label>

                        @Html.TextAreaFor(m => m.Complaint, new { @class = "form-control",required = "required" })

                    </div>


                    <div>

                        <input type="submit" value="Submit Complaint" class="btn btn-success" />
                    </div>





                </div>
            </div>


        </div>


    </body>

}




