@model InfopoolFinal.Models.BlogViewModel
@{
    ViewBag.Title = "PostNewBlog";
    var mail = ViewBag.email;
}




@using (Html.BeginForm("PostNewBlog", "Blogger", FormMethod.Post, new { encType = "multipart/form-data" }))
{


<body style="background:url(../images/watch.jpg);background-size:cover">
    

    <div class="w3ls-grids">

        <div class="w3ls-right" style="float: right;width: 45%;background:rgba(194, 191, 183, 0.95);text-align: center;border-radius:10px; ">
            <div class="w3l-dot">
                <div class="w3-heading">
                    <h3 style="font-size: 2.5em;font-weight:bold; color:black;text-shadow: 2px 3px rgba(121, 119, 113, 0.60);letter-spacing: 12px;line-height: 1.5em;">
                        Post Blog
                    </h3>
                    <h4 style="color: #000;">We will relate these Blogs to our users</h4>
                </div>
            </div>

        </div>


        <div style="padding:2%;width:50%;background: rgba(194, 191, 183, 0.80);margin-top:50px;border-radius:15px">
            <div class="w3-title">
                <h2 style="text-align:center;color:#000;font-weight:bold;">Fill up the form</h2>

            </div>


            <div class="" align="center">
                <div class="form-group">

                    <label>Blog Title:</label>

                    @Html.TextBoxFor(m => m.BlogTitle, new { @class = "form-control",required = "required" })

                </div>
                <div class="form-group">

                    <label>Blog Body(8000 characters at most):</label>

                    @Html.TextAreaFor(m => m.BlogBody, new { @class = "form-control",required = "required" ,@style="height:200px"})

                </div>
                <div class="form-group">

                    <label>Select Blog Type:</label>
                    @Html.DropDownListFor(m => m.BlogType, new SelectList(new List<Object>{
                       new { value = 0 , text = "Breaking"  },
                       new { value = 1 , text = "World" },
                       new { value = 2 , text = "Technology"} ,
                       new { value = 3 , text = "Fashion"} ,
                       new { value = 4 , text = "Business"} ,
                       new { value = 5 , text = "Stock Market"} ,
                       new { value = 6 , text = "Sports"} },
                    "value",
                  "text",
                   2)
                   )
                </div>
                @{
                    Model.Tag1 = "";
                    Model.Tag2 = "";
                    Model.Tag3 = "";
                    Model.Tag4 = "";
                }
                <div class="form-group">

                    <label>Tag 1(*):</label>

                    @Html.TextBoxFor(m => m.Tag1, new { @class = "form-control",required = "required" })

                </div>
                <div class="form-group">

                    <label>Tag 2:</label>

                    @Html.TextBoxFor(m => m.Tag2, new { @class = "form-control" })

                </div>
                <div class="form-group">

                    <label>Tag 3:</label>

                    @Html.TextBoxFor(m => m.Tag3, new { @class = "form-control" })

                </div>
                <div class="form-group">

                    <label>Tag 4:</label>

                    @Html.TextBoxFor(m => m.Tag4, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label>Add Cover Image:</label>
                    @Html.TextBoxFor(model => model.file, new { htmlAttributes = new { @class = "form-control" }, type = "file", name = "file" })<br />
                </div>
                <div class="form-group">
                    @Html.HiddenFor(m => m.EmailFromView, new { @class = "form-control " })


                </div>


                <div>

                    <input type="submit" value="Submit Blog For Approval" class="btn btn-success" />
                </div>





            </div>
        </div>


    </div>


</body>

}


