@model InfopoolFinal.Models.PayViewModel
@{
    ViewBag.Title = "Payment";
}

@using (Html.BeginForm("Payment", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{


    <body style="background:url(../images/watch.jpg);background-size:cover">
        

        <div class="w3ls-grids">

            <div class="w3ls-right" style="float: right;padding:2%;width: 45%;background:rgba(194, 191, 183, 0.95);text-align: center;border-radius:10px ">
                <div class="w3l-dot">
                    <div class="w3-heading">
                        <h3 style="font-size: 2.5em;font-weight:bold; color:black;text-shadow: 2px 3px rgba(121, 119, 113, 0.60);letter-spacing: 12px;line-height: 1.5em;">
                            Submit Transaction Id
                        </h3>
                        <h4 style="color: #000;">Your AD will be approved shortly and you will be notified through email</h4>
                    </div>
                </div>

            </div>


            <div style="padding:2%;width:50%;background: rgba(194, 191, 183, 0.80);margin-top:50px;border-radius:15px">
                <div class="w3-title">
                    
                    <h3 style="text-align:center;color:#000;font-weight:bold;">Fill up the form</h3>

                </div>


                <div class="" align="center">
                    <div class="form-group">
                        
                        <label>Your Payable Amount Is:</label>
                        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" ,@readonly="readonly",@style ="text-align:center;"})
                       <label>Transaction ID:</label>

                        @Html.TextBoxFor(m => m.Trxid, new { @class = "form-control", required = "required" })

                    </div>

                    <div class="form-group">
                        @Html.HiddenFor(m => m.AdId, new { @class = "form-control" })


                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(m => m.Userid, new { @class = "form-control" })


                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(m => m.EmailFromView, new { @class = "form-control" })


                    </div>


                    <div>

                        <input type="submit" value="Pay" class="btn btn-success" />
                    </div>





                </div>
            </div>


        </div>


    </body>

}




