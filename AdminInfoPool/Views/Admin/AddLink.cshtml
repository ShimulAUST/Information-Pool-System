@model InfopoolFinal.Models.AddLinkViewModel

@{
    ViewBag.Title = "AddLink";
     ViewData["sessionString"] = System.Web.HttpContext.Current.Session["sessionString"] as String;
}
    <body style="background:url(../images/btnpic.jpg);background-size: cover;">
        <button style="float:right;background-color:rgba(204, 191, 165, 0.90); border:none;border-radius:15px;height:40px;width:80px" class="btn-info" onclick="location.href=' @Url.Action("Index", "Admin",new {adminName=ViewData["sessionString"] = System.Web.HttpContext.Current.Session["sessionString"] as String })'">Back   <i class="fa fa-arrow-circle-left"></i></button>


        <div class="container" style="background-color:rgba(204, 191, 165, 0.90); width:500px; padding:2%;margin-top:100px;border-radius:15px">
            <h2 style="text-align:center;opacity:1;font-weight:bold;">Add Link</h2>
            @using (Html.BeginForm("Addlink", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {





        <div class="" align="center">
            <div class="form-group ">
                <label style="font-weight:bold">HeadLine:</label>

                @Html.TextBoxFor(m => m.newsHeadline, new { @class = "form-control", required = "required" })


            </div>
            <div class="form-group ">

                <label style="font-weight:bold">Link:</label>

                @Html.TextBoxFor(m => m.newsLink, new { @class = "form-control ", required = "required" })

            </div>
            @*<div class="form-group">

                <label style="font-weight:bold">Source:</label>

                @Html.TextBoxFor(m => m.newsSource, new { @class = "form-control " })

            </div>*@
            <div class="form-group">

                <label>Select News Source:</label>
                <br />
                @Html.DropDownListFor(m => m.newsSource, new SelectList(new List<Object>{
                   new { value = 0 , text = "BBC"  },
                   new { value = 1 , text = "CNN" },
                   new { value = 2 , text = "GOOGLE NEWS"} ,
                   new { value = 3 , text = "FOX NEWS"} ,
                   new { value = 4 , text = "PROTHOM ALO"} ,
                   new { value = 5 , text = "ITTEFAQ"} ,
                   new { value = 6 , text = "BANGLADESH PRATIDIN"},
                   new { value = 7 , text = "JUGANTAR"} ,
                   new { value = 8 , text = "KALER KANTHA"} ,
                   new { value = 9 , text = "NEW AGE"} ,
                   new { value = 10 , text = "DAILY STAR"},
                   new { value = 11 , text = "DAILY SUN"}
           },
                "value",
              "text",
               2)
               )
            </div>

            <div class="form-group">

                <label>Select News Type:</label>
                <br />
                @Html.DropDownListFor(m => m.newsType, new SelectList(new List<Object>{
                   new { value = 0 , text = "Breaking"  },
                   new { value = 1 , text = "World" },
                   new { value = 2 , text = "Technology"} ,
                   new { value = 3 , text = "Fashion"} ,
                   new { value = 4 , text = "Business"} ,
                   new { value = 5 , text = "Stock Market"} ,
                   new { value = 6 , text = "Sports"} },
                "value",
              "text",
               2)
               )
            </div>
            @*<div class="form-group">

            <label style="font-weight:bold">Type: </label>
            @Html.TextBoxFor(m => m.newsType, new { @class = "form-control " })

        </div>*@

            <div class="form-group">
                @Html.HiddenFor(m => m.AdminNameFromView, new { @class = "form-control " })


            </div>



            <div>

                <input type="submit" value="Save" class="btn btn-success" style="background-color:#199d4e;width:300px" />
            </div>





        </div>






            }
        </div>
    </body>

