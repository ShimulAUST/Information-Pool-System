
@{
    ViewBag.Title = "RemoveLink";
    ViewData["sessionString"] = System.Web.HttpContext.Current.Session["sessionString"] as String;
}

<br />
<br />
<body style="background:url(../images/n26.jpg);background-size:cover">
    @Html.Raw(TempData["msg"]);
    @{
        TempData["msg"] = null;
    }
    <div style="background-color:white;padding:2%;margin-top:2%;margin-bottom:10%">
        <h2 align="center">Remove Links</h2>
        @if (ViewData["sessionString"] != null)
        {
            <button style="float:right;" class="btn-info" onclick="location.href=' @Url.Action("Index", "Admin", new { adminName = ViewData["sessionString"] = System.Web.HttpContext.Current.Session["sessionString"] as String })'">Back</button>
        }
        else
        {
            <button style="float:right;" class="btn-info" onclick="location.href=' @Url.Action("Index", "Home")'">Back</button>
        }
        @if (Model.Rows.Count == 0)
        {
            <h3>We have no news to show at the moment.</h3>
        }
        else
        {
            <table table class="table table-bordered table-striped" style="background-color:white;">
                <tr>
                    <th style="border: 2px solid #2C3E50;font-weight:bold">
                        News Id
                    </th>

                    <th style="border: 2px solid #2C3E50;font-weight:bold">
                        News Headline
                    </th>
                    <th style="border: 2px solid #2C3E50;font-weight:bold">
                        News Link
                    </th>
                    <th style="border: 2px solid #2C3E50;font-weight:bold">
                        News Source
                    </th>
                    <th style="border: 2px solid #2C3E50;font-weight:bold">
                        News Type
                    </th>
                    <th style="border: 2px solid #2C3E50;font-weight:bold">
                        Post Time
                    </th>
                    <th style="border: 2px solid #2C3E50;font-weight:bold">
                        Admin Id
                    </th>


                    <th style="border: 2px solid #2C3E50;font-weight:bold">
                        Remove
                    </th>
                </tr>
                @for (int i = 0; i < Model.Rows.Count; i++)
                {
                    <tr>

                        <td style="border: 1px solid #2C3E50;">@Model.Rows[i][0]</td>
                        <td style="border: 1px solid #2C3E50;">@Model.Rows[i][1]</td>
                        <td style="border: 1px solid #2C3E50;">@Model.Rows[i][2]</td>
                        <td style="border: 1px solid #2C3E50;">@Model.Rows[i][3]</td>
                        <td style="border: 1px solid #2C3E50;">@Model.Rows[i][4]</td>
                        <td style="border: 1px solid #2C3E50;">@Model.Rows[i][5]</td>
                        <td style="border: 1px solid #2C3E50;">@Model.Rows[i][6]</td>
                        <td style="border: 1px solid #2C3E50;"><a href="@Url.Action("Delete", "Admin", new { @id =Model.Rows[i][0]})" class="btn  btn-danger" onclick="return confirm ('Are you sure want to delete blog?');">Remove</a></td>
                        @*                <td style="margin-left:3px;"><button class="btn-danger" onclick="location.href=' @Url.Action("Delete", "Admin", new { @id =Model.Rows[i][0]})'">Remove</button></td>
                        *@


                    </tr>
                }


            </table>
        }

    </div>
</body>