@model InfopoolFinal.Models.AddEventViewModel
@{
    ViewBag.Title = "Add Event";
     ViewData["sessionString"] = System.Web.HttpContext.Current.Session["sessionString"] as String;
}
    <body style="background:url(../images/btnpic.jpg);background-size: cover;">
        <button style="float:right;background-color:rgba(204, 191, 165, 0.90); border:none;border-radius:15px;height:40px;width:80px" class="btn-info" onclick="location.href=' @Url.Action("Index", "Admin",new {adminName=ViewData["sessionString"] = System.Web.HttpContext.Current.Session["sessionString"] as String })'">Back  <i class="fa fa-arrow-circle-left"></i></button>


        <div class="container" style="background-color:rgba(204, 191, 165, 0.90); width:500px; padding:3%;margin-top:100px;border-radius:15px">

            <h2 style="text-align:center;opacity:1;font-weight:bold;">Add Event</h2>


            @using (Html.BeginForm("AddEvent", "Admin", FormMethod.Post,new { encType = "multipart/form-data" }))
            {





        <div class="" align="center">
            <div class="form-group ">
                <label style="font-weight:bold">Title:</label>

                @Html.TextBoxFor(m => m.eventTitle, new { @class = "form-control" ,required = "required" })

            </div>
            <div class="form-group">

                <label style="font-weight:bold">Date:</label>

                @Html.EditorFor(model => model.eventDate, new { htmlAttributes = new { @class = "form-control",required = "required" } })


            </div>
            <div class="form-group">

                <label style="font-weight:bold">Time:</label>

                @Html.EditorFor(model => model.eventTime, new { htmlAttributes = new { @class = "form-control",required = "required" } })


            </div>
            <div class="form-group">

                <label style="font-weight:bold">EventVenue:</label>

                @Html.TextBoxFor(m => m.eventVenue, new { @class = "form-control ",required = "required" })

            </div>
            <div class="form-group">

                <label style="font-weight:bold">EventDetail:</label>

                @Html.TextBoxFor(m => m.eventDetail, new { @class = "form-control " ,required = "required"})

            </div>
            <div>
                @Html.TextBoxFor(model => model.file, new { htmlAttributes = new { @class = "form-control" }, type = "file", name = "file" ,required = "required"})<br />
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.AdminNameFromView, new { @class = "form-control " })


            </div>


            <div>

                <input type="submit" value="Save" class="btn btn-success" style="background-color:#199d4e;width:300px" />
            </div>





        </div>






            }
        </div>

    </body>





